{
  "name": "scribe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:mac": "tsc && vite build && electron-builder --mac --arm64",
    "build:windows": "tsc && vite build && electron-builder --win --x64",
    "build:linux": "tsc && vite build && electron-builder --linux --x64",
    "lint": "npm run format && eslint 'src/**/*' --ext ts,tsx --report-unused-disable-directives  --max-warnings 0 && npm run lint:node",
    "lint:node": "eslint 'electron/' --ext ts --report-unused-disable-directives  --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier . --write",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,css,md,json}\" && prettier --check \"electron/**/*.{js,ts,jsx,tsx,css,md,json}\"",
    "prepare": "husky",
    "transpile": "tsc --project ./tsconfig.json"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.532.0",
    "os-utils": "^0.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/os-utils": "^0.0.4",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "daisyui": "^5.0.46",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
