{
  "files": [],
  "compilerOptions": {

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
    "@shared/*": ["shared/*"],
    "@electron/*": ["electron/*"],
    "@src/*": ["src/*"],
    "@service-layer/*": ["src/service-layer/*"],
    "@utility/*": ["src/utility/*"],
    "@contexts/*": ["src/contexts/*"],
    "@lexical-custom-plugins/*": ["src/editor/lexical-custom-plugins/*"],
    },
  },
  "include": ["src", "electron", "shared/lexical-types.ts", "shared/ipc-constants.ts", "src/types/global.d.ts"],
  "references": [
    { "path": "./electron" },
    { "path": "./shared" }
  ]
}
