{
  "files": [],
  "compilerOptions": {

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
    "@shared/*": ["shared/*"],
    "@electron/*": ["electron/*"]
    },
  },
  "include": ["src", "electron", "shared/types.ts"],
  "references": [
    { "path": "./electron" },
    { "path": "./shared" }
  ]
}
